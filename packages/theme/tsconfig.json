// Extends is not supported at this time
/*
{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./lib",
        "lib": ["dom", "dom.iterable"]
    },
    "references": [
        { "path":  "../../common" }
    ],
    "include": [
        "src"
    ]
}
*/
{
    "compilerOptions": {
        "composite": true,
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "outDir": "./lib",
        "rootDir": "./src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2018",
        "sourceMap": true,
        "lib": [
            "es2018",
            "dom"
        ],
    },
    "references": [
        { "path":  "../../../common" },
    ],
    "exclude": [
        "test",
        "node_modules",
        "**/*.unit.ts"
    ]
}
{
    "compilerOptions": {
        "composite": true,
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "outDir": "./lib",
        "rootDir": "./src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2018",
        "sourceMap": true,
        "lib": [
            "es2018",
            "dom"
        ],
    },
    "exclude": [
        "lib",
        "node_modules",
        "test"
    ]
}